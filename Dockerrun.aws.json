{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "api",
      "image": "hombrew/rtb-api:latest",
      "hostname": "api",
      "essential": false,
      "memory": 256,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/healthCheck || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 0
      }
    },
    {
      "name": "server",
      "image": "hombrew/rtb-server:latest",
      "essential": true,
      "memory": 256,
      "dependsOn": [
        {
          "containerName": "api",
          "condition": "HEALTHY"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "api"
      ]
    }
  ]
}